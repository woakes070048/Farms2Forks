<!DOCTYPE html>
<html>
<head>
  <title>Farms2Forks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

<nav class="blue-grey lighten-2 amber darken-2" role="navigation">
  <div class="nav-wrapper container">
    <a id="logo-container" href="/" class="brand-logo"><b>Farms2Forks</b></a>
    <% if user_signed_in? %>
    <ul class="right hide-on-med-and-down">

      <% if current_user.is_lender %>
        <li><a href="/listings/new">Add a Food</a></li>
      <% end %>

      <ul id="dropdown1" class="dropdown-content">
        <li><%= link_to 'Profile', current_user %></li>
        <li><a href="#">Messages</a></li>
        <li><%= link_to 'Settings', edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete  %></li>
      </ul>
      <li><a class="dropdown-button" data-activates="dropdown1"><%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>
    </ul>
    <% else %>
    <ul class="right hide-on-med-and-down">
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Become a Farmer", new_user_registration_path %></li>
      <li><%= link_to "Become a Fork", new_user_registration_path %></b></li>
    </ul>
    <% end %>
    <ul id="nav-mobile" class="side-nav">
      <li><a href="#">Navbar Link</a></li>
    </ul>
    <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
  </div>
</nav>

<% if notice %>
  <div id="notice-wrapper">
    <p class="notice"><%= notice %></p>
  </div>
<% elsif alert %>
  <div id="notice-wrapper">
    <p class="alert"><%= alert %></p>
  </div>
<% end %>

<br>
<br>
<br>

<%= yield %>

</body>

<script>
  $(document).ready(function() {
    setTimeout(function() {
      $('#notice-wrapper').fadeOut('slow', function() {
        $(this).remove();
      });
    }, 2000);
  });
</script>

</html>
