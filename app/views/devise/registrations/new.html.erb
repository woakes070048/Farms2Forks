<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
      <div class="row main">
        <div class="main-login main-center">
                    <h1 class="title">Sign Up</h1>
                    <hr class="colorgraph">
          <form class="form-horizontal" method="post" action="#">
            
            <h4 class="radio">
              <label><input id="fork" type="radio" name="optradio">Become a Fork</label>
            </h4>
            <h4 class="radio">
              <label><input id="farmer" type="radio" name="optradio">Become a Farmer</label>
            </h4>

            <div id="reg-user" style="display:none">
            <div class="form-group">
              <label for="name" class="cols-sm-2 control-label">Your Name</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <div class="field">
                      <%= f.text_field :name, autofocus: true, :class => "form-control" %>
                    </div>
                </div>
              </div>
            </div>

                       <div class="field">
              <%= f.label "Profile Picture" %><br />
              <%= f.file_field :avatar %>
            </div> <br>

            <div class="form-group">
              <label for="email" class="cols-sm-2 control-label">Your Email</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                    <div class="field">
                      <%= f.email_field :email, :class => "form-control"  %>
                    </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="password" class="cols-sm-2 control-label">Password</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <div class="field">
                      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
                    </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <div class="field">
                      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
                   </div>
                </div>
              </div>
            </div>

            </div>

            <div id="farmer-options" style="display: none;">

            <div id="check"><%= f.check_box :is_lender, {}, true %> <%= f.label :is_lender, "Become a Farmer?" %> </div>

           <div class="field">
              <%= f.label "Profile Picture" %><br />
              <%= f.file_field :avatar %>
            </div> <br>

            <div class="form-group">
              <label for="username" class="cols-sm-2 control-label">Location</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-map-o fa" aria-hidden="true"></i></span>
                    <div class="field">
                      <%= f.text_field :location, :class => "form-control" %>
                    </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="username" class="cols-sm-2 control-label">Paypal.me URL</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-link fa" aria-hidden="true"></i></span>
                      <div class="field">
                       <%= f.text_field :payment_url, :class => "form-control" %>
                      </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="username" class="cols-sm-2 control-label">Phone</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-phone fa" aria-hidden="true"></i></span>
                      <div class="field">
                       <%= f.text_field :phone, :class => "form-control" %>
                      </div>
                </div>
              </div>
            </div>

            </div>
            
            <div id="buttons" style="display: none;">
              
              <div class="form-group ">
              <%= f.submit "Sign up", :class => "btn btn-primary btn-lg btn-block login-button"%>
            </div>
            <div class="login-register">
                    <a href="/users/sign_in">Sign in</a>
                 </div>

            </div>

          </form>
        </div>
      </div>
    <% end %>
    </div>


