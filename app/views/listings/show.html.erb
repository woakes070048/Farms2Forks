<div class="container" style="width: 60%;">
    <div class="row">
        <div class="col-md-9 col-sm-12">
            <div class="panel panel-default profile-panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-3 col-xs-12 text-center" >
                            <%= image_tag @food.image.url(:thumb), :class => 'img-circle' %>
                            <div style="font-size:36px; text-align: center;">$<%= @food.price %></div> <span>for <strong><%= @food.amount %>kg</strong></span>
                        </div>
                        <div class="col-sm-9 col-xs-12 user-info-box">
                        <a class="btn btn-primary pull-right" data-toggle="modal" data-target="#buyModal"><i class="fa fa-smile-o fa-lg" aria-hidden="true"></i> Buy Food</a>
                            <h3 class="user-name"><%= @food.tool %></h3>
                            <p><strong>Food located in <span class="user-dept"><%= @food.user.location %></span></strong></p>
                            <p><span class="user-year">Posted <%= time_ago_in_words(@food.created_at) %> ago by <%= link_to @food.user.name, @food.user %>
                             <span><%= image_tag @food.user.avatar.url(:thumb), :class => "prof-img" %></p>
                        <% if current_user == @food.user %>
                            <%= link_to 'Edit Food', edit_listing_path %>
                            <span> | </span>
                            <%= link_to 'Delete Food', @food, :method => :delete, :confirm => "Are you sure?" %>
                        <% end %>

                        </div>
                    </div>
                </div>
            </div>
           
            <div class="panel panel-default academic-panel">
                <div class="panel-body">
                    <h3><i class="fa fa-book fa-lg"></i> More Listings</h3>
                    <hr class="colorgraph">
                    </div>
                    <table class="table table-hover table-responsive">
                        <thead>
                        </thead>
                        <tbody style="text-align: center;">
                        <% @food.user.listings.each do |listing| %>
                            <tr>
                                <td><%= image_tag listing.image.url(:thumb), :class => 'prof-food' %></td>
                                <td style="line-height:50px;"><%= link_to listing.tool, listing %></td>
                                <td style="line-height:50px;">$ <%= listing.price %></td>
                                <td style="line-height:50px;">Posted <%= time_ago_in_words(listing.created_at) %> ago</td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>

        </div>
        <div class="col-md-3 col-sm-12">
            <div class="row">
                
                <!-- Panel 2 -->
                <div class="col-md-12 col-sm-6 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-user fa-lg"></i> 
                            About Farmer
                        </div>
                        <div class="panel-body" style="text-align: center;">
                            <%= image_tag @food.user.avatar.url(:thumb), :class => "img-circle-aa" %>
                        <div><h4><%= link_to @food.user.name, @food.user %></h4></div>
                        <div><%= @food.user.short %></div>
                        <div><%= rating_for @food.user, "user" %></div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="buyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Contact Farmer</h4>
      </div>
      <div class="modal-body" style="display:table; margin: 0 auto;">

      <h2 class="heading"><%= @food.user.name %></h2>
      <h2 class="heading"><strong>~</strong></h2>
      <h3 class="heading"><strong>Phone:</strong> <%= @food.user.phone %></h3>
      <h3 class="heading"><strong>Email:</strong> <%= @food.user.email %></h3>
      <h3 class="heading"><strong>Payment URL:</strong> <%= @food.user.payment_url %></h3>
      </div>
    </div>
  </div>
</div>

<br><br>