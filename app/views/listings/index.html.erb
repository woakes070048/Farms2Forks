<div class="page-header">
  <h1 class="heading">Listings <small>Find the freshest foods</small></h1>
</div>

<div class="card-panel" style="width: 40%; display:table; margin: 0 auto;">
  <% @tools.to_a %>
  <% if params[:search] %>
    <div id="query_return">results for "<b><%= params[:search] %></b>"</div>
  <% end %>
<% @foods.each do |listing| %>

<div class="panel panel-default">
  <div class="panel-heading" style="background-color:#a886bd; color: white;">
    <h3 class="panel-title" style="font-weight: 500px;"><%= link_to listing.tool, listing %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3"><%= link_to (image_tag listing.image.url(:thumb), :class => 'show_img'), listing %></div>
      <div class="col-md-6" style="font-size: 15px;">
        <div>Farm located in <strong><%= listing.user.location %></strong></div>
        <div>Farmer rating:<%= rating_for listing.user, "user" %></div>
        <div>Posted <%= time_ago_in_words(listing.created_at) %> ago by <%= link_to listing.user.name, listing.user %>
          <span><%= image_tag listing.user.avatar.url(:thumb), :class => "prof-img" %></span></div>
      </div>
      <div class="col-md-3">
        <div style="text-align: center;"><strong><%= listing.amount %>kg</strong> for</div>
        <p style="font-size:36px; text-align: center;">$<%= listing.price %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
</div>
<br>
